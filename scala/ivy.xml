<ivy-module version="2.0">
    <info organisation="info.cukes" module="cucumber-scala" revision="${cucumber-jvm-version}"/>

    <configurations defaultconfmapping="*->default">
        <conf name="default"/>
        <conf name="test" extends="default"/>
    </configurations>
    <publications>
        <artifact conf="default" name="${ivy.module}"/>
        <!--<artifact conf="default" name="${ivy.module}-sources"/>-->
        <!--<artifact conf="default" name="${ivy.module}-javadoc"/>-->
    </publications>
    <dependencies>
        <dependency conf="default" org="info.cukes" name="cucumber-core" rev="latest.integration"/>
        <dependency conf="default" org="org.scala-lang" name="scala-library" rev="2.9.1"/>
        <dependency conf="default" org="org.scala-lang" name="scala-compiler" rev="2.9.1"/>

        <dependency conf="test" org="info.cukes" name="cucumber-junit" rev="latest.integration"/>
        <dependency conf="test" org="org.mockito" name="mockito-all" rev="1.9.0"/>
    </dependencies>
</ivy-module>