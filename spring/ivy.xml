<ivy-module version="2.0">
    <info organisation="info.cukes" module="cucumber-spring" revision="${cucumber-jvm-version}"/>

    <configurations defaultconfmapping="*->default">
        <conf name="default"/>
        <conf name="test" extends="default"/>
    </configurations>

    <publications>
        <artifact conf="default"/>
        <artifact conf="default" ext="jar.asc"/>
        <artifact conf="default" name="${module}-javadoc"/>
        <artifact conf="default" name="${module}-javadoc" ext="jar.asc"/>
        <artifact conf="default" name="${module}-sources"/>
        <artifact conf="default" name="${module}-sources" ext="jar.asc"/>
        <artifact conf="default" ext="pom" type="pom"/>
        <artifact conf="default" ext="pom.asc" type="pom"/>
    </publications>

    <dependencies>
        <dependency name="cucumber-java" rev="${cucumber-jvm-version}" conf="default"/>
        <dependency name="spring-tx" org="org.springframework" rev="3.1.0.RELEASE" conf="default"/>

        <dependency name="cucumber-junit" rev="${cucumber-jvm-version}" conf="test"/>
        <dependency name="mockito-all" org="org.mockito" rev="1.9.0" conf="test"/>
    </dependencies>
</ivy-module>
