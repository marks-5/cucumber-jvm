<ivy-module version="2.0">
    <info organisation="info.cukes" module="cucumber-junit" revision="${cucumber-jvm-version}"/>

    <configurations defaultconfmapping="*->default">
        <conf name="default"/>
        <conf name="test" extends="default"/>
        <conf name="release" extends="default"/>
    </configurations>

    <publications>
        <artifact conf="default"/>
        <artifact conf="release" ext="jar.asc" type="asc"/>
        <artifact conf="release" name="${module}-javadoc"/>
        <artifact conf="release" name="${module}-javadoc" ext="jar.asc" type="asc"/>
        <artifact conf="release" name="${module}-sources"/>
        <artifact conf="release" name="${module}-sources" ext="jar.asc" type="asc"/>
        <artifact conf="release" ext="pom" type="pom"/>
        <artifact conf="release" ext="pom.asc" type="asc"/>
    </publications>

    <dependencies>
        <dependency name="cucumber-core" rev="${cucumber-jvm-version}" conf="default"/>
        <dependency name="junit" org="junit" rev="4.10" conf="default"/>

        <dependency name="mockito-all" org="org.mockito" rev="1.9.0" conf="test"/>
    </dependencies>
</ivy-module>
